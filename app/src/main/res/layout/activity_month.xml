<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/month"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/first_week"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="First\nWeek"
            android:textStyle="bold"
            android:textColor="#D50000"
            android:textSize="30dp"
            android:background="@drawable/btn_back"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            />

        <Button
            android:id="@+id/second_week"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Second\nWeek"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="30dp"
            android:background="@drawable/btn_back"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            />

        <Button
            android:id="@+id/third_week"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Third\nWeek"
            android:textStyle="bold"
            android:textColor="#0A17F8"
            android:textSize="30dp"
            android:background="@drawable/btn_back"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            />

        <Button
            android:id="@+id/fourth_week"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Fourth\nWeek"
            android:textStyle="bold"
            android:textColor="#EBFD0335"
            android:textSize="30dp"
            android:background="@drawable/btn_back"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            />


    </LinearLayout>


</ScrollView>


