<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/week_back"
    tools:context=".fourthweek">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/weekchart"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/Early_morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Early morning: \n10 ml Amla juice + 3-4 walnuts and almonds mix"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF6D00"/>

        <TextView
            android:id="@+id/Breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Breakfast: \n2 medium dal paranthas (made from leftover dal if any) + 1 bowl low-fat curd / 2 Ragi veggies paddus with peanut chutney / 2 small and fluffy vegetable pancakes / 2 paranthas + 1 bowl vegetables raita / Paneer and vegetable rice bath (from leftover rice) + 1 bowl curd / 2 idlis with sambhar"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#F3EF05"/>

        <TextView
            android:id="@+id/Mid_morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Mid-morning: \nAmaranth seeds chikki / 3-4 dry fruits / 1 bowl cut fresh fruits of choice"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#17C24B"/>

        <TextView
            android:id="@+id/Pre_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:text="Pre-lunch: \n1 bowl sprout salad / 1 bowl grilled chicken or fish salad"
            android:textColor="#DF0D8B"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:text="Lunch: \n1 bowl millet and dal khichdi + 1 bowl mixed vegetable kadhai / 2 multigrain roti + 1 bowl non-veg subji or egg bhurji +1 glass of spiced buttermilk / 2 vegetable millet uttapams + 1 bowl sambhar"
            android:textColor="#F1F1ED"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Snack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Snack: \n1 cup spiced boiled corn or 1 corn on the cob + 1 cup coffee, tea or green tea/ 1 Fruit of choice / 1 glass whey protein drink"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0055FF" />

        <TextView
            android:id="@+id/Dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Dinner: \n1 bowl vegetable and mixed seeds salad + 2 multigrain roti + 1 non-veg subji or dal of your choice / 1 bowl red or brown rice + 1 bowl mix veg sambhar + 1 egg bhurji"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#11FF00" />

        <TextView
            android:id="@+id/Post_dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="12dp"
            android:text="Post-dinner (if you are up late): \n1 glass warm milk"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#DD9CE9" />

    </LinearLayout>


</ScrollView>